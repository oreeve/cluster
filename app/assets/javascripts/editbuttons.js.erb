var main  = function() {
  $(".remove-student").hide();
  $(".remove-assignment").hide();
  $(".edit-submission").hide();
  $(".submission-form").hide();

  $("#toggleAssignment").click(function() {
    $(".remove-assignment").toggle();

    if ($(this).val() == "Edit Assignments") {
      $(this).val("Done");
    } else {
    $(this).val("Edit Assignments");
    }
  });

  $("#toggleStudent").click(function() {
    $(".remove-student").toggle();

    if ($(this).val() == "Edit Class") {
      $(this).val("Done");
    } else {
    $(this).val("Edit Class");
    }
  });

  $("#toggleSubmission").click(function() {
    $(".edit-submission").toggle();
    $(".assignmentSubs").toggle();
    $(".submission-form").toggle();
  });

  $(".toggleStudentSub").click(function() {
    $(this).parent("li").children(".submission-form").toggle();
  });

};

$(document).ready(main);
