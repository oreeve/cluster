<div class="assignments">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
              <div class="assignment-list">
                <% if !current_user.teacher? %>
                    <h1>Submissions:</h1>
                        <% @submissions.each do |submission| %>
                            <div class="col-md-5 assignment">
                              <%= link_to submission.assignment.title, assignment_path(submission.assignment.id) %>
                              <%= submission.body.html_safe %>
                              <% if submission.grade %>
                                Grade: <%= submission.grade %><br>
                              <% end %>
                              <% if submission.comments %>
                                Comments: <%= submission.comments %><br>
                              <% end %>
                            </div>
                        <% end %>
                    <% else %>
                      <%= link_to 'Assignments', assignments_path, class: "btn btn-default btn-lg" %>
                      <%= link_to 'My Class', rosters_path, class: "btn btn-default btn-lg" %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
