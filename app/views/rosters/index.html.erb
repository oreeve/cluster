<div class="new-assignment">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
              <h1>My Class:</h1>
              <%= link_to "Add Students", new_roster_path, class: "btn btn-default btn-md" %>
              <input type="button" value="Edit Class" id="toggleButton" class="btn btn-default btn-md"><br><br>


              <% @class.each do |item| %>
              <%= link_to "#{item.student.first_name} #{item.student.last_name}", '#' %>   <%= link_to "X", roster_path(item.id), data: { confirm: "Are you sure you want to remove this student?" }, method: :delete, class: "remove-student" %><br>
              <% end %>
            </div>
        </div>
    </div>
</div>
