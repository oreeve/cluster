<div class="new-assignment">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
              <h1>My Class:</h1>
              <input type="button" value="Edit Class" id="toggleButton"><br><br>


              <% @class.each do |item| %>
              <%= link_to "#{item.student.first_name} #{item.student.last_name}", '#' %>   <%= link_to "X", roster_path(item.id), data: { confirm: "Are you sure?" }, method: :delete, id: "remove-student", class: "hidden" %><br>
              <% end %>


              <br>
              <%= link_to "Add Students", new_roster_path %>
            </div>
        </div>
    </div>
</div>
